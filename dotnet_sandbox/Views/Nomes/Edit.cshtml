@model Nomes

@{
    ViewData["Title"] = "Editar Nome";
}

    <div class="text-center text-dark">
        <h1 class="display-4">Editar Nome</h1>
        <p>Update.</p>
    </div>

<div class="col-4 offset-4 text-center">
    <form asp-action="Edit" asp-controller="Nomes">

        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <input asp-for="Nome" class="form-control" placeholder="Seu nome" required>
        </div>

        <div class="form-group">
            <input asp-for="Snome" class="form-control" placeholder="Seu sobre nome" required>
        </div>

        <input type="submit" value="Salvar" class="btn btn-success" />&nbsp;&nbsp;
        <button class="btn btn-danger" asp-action="Index" asp-controller="Nomes">Cancelar</button>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
