@model IEnumerable<Nomes>

@{
    ViewData["Title"] = "Index";
}

    <div class="text-center text-dark">
        <h1 class="display-4">Lista Nomes</h1>
        <p>Delete, Update.</p>
    </div>


<div class="col-12 text-center">
    <table class="table table-hover table-dark">
        <thead>
            <tr class="text-white">
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Sobre nome</th>
                <th scope="col">Opções</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Nome</td>
                <td>@item.Snome</td>
                <td>
                    <a asp-action="Edit" asp-controller="Nomes" asp-route-id="@item.Id" class="btn btn-success">Editar</a>&nbsp;
                    <a asp-action="Delete" asp-controller="Nomes" asp-route-id="@item.Id" class="btn btn-danger">Remover</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

            
      
